using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSpril
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int picturesAmount = 52;
            int maxPicturesInLineAmount = 3;
            int filledPicturesLinesAmount = picturesAmount / maxPicturesInLineAmount;
            int leftPicturesAmount = picturesAmount % maxPicturesInLineAmount;
            Console.WriteLine($"Пользователь!Заполненных рядов с картинками {filledPicturesLinesAmount},а не вместилось картинок: {leftPicturesAmount}");
            Console.ReadKey();
        }
    }
}
