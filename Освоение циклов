using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSpril
{
    internal class Program
    {
        static void Main(string[] args)
        {
              Console.WriteLine("Введите Ваше сообщение:");

            string message = Console.ReadLine();

              Console.WriteLine("Введите количество повторов:");

            int repeatAmount = Convert.ToInt32(Console.ReadLine());

              for (int countingTool = 0; countingTool < repeatAmount; countingTool++) 
              {
                Console.WriteLine(message);
              }
        Console.ReadKey();
        }
    }
}
