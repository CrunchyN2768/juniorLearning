using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSpril
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Random rand = new Random();   

            int number = rand.Next(0,101);

            int sum = 0;

            for(int i = 0; i <= number; i++) 
            {
                if (i%3==0||i%5==0)
                {
                    sum += i;
                }
            }

            Console.WriteLine($"Сумма всех чисел до числа {number},которые делятся на 3 или 5,равна {sum}");

            Console.ReadKey();
        }
    }
}
