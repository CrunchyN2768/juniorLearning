using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSpril
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();

            int lowerLimit = 0;

            int upperLimit = 101;

            int firstDivider = 3;

            int secondDivider = 5;

            int remains = 0;

            int number = random.Next(lowerLimit, upperLimit);

            int sum = 0;

            for (int i = 0; i <= number; i++)
            {
                if (i % firstDivider == remains || i % secondDivider == remains)
                {
                    sum += i;
                }
            }

            Console.WriteLine($"Сумма всех чисел до числа {number},которые делятся на 3 или 5,равна {sum}");

            Console.ReadKey();
        }
    }
}
